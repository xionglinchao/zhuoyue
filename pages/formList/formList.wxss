page {
  width: 100%;
  background: rgb(246, 246, 246);
}

.tab_box {
  width: 100%;
  position: fixed;
  top: 0;
  background: #FFFFFF;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.tab {
  font-size: 24rpx;
  color: #444444;
  padding: 22rpx 20rpx;
}

.active {
  border-bottom: 2rpx solid #42b72a;
  color: #42b72a;
}

.scroll_box {
  padding-top: 76rpx;
}

.form_info {
  background: #FFFFFF;
  display: flex;
  align-items: center;
  margin-top: 16rpx;
  padding: 20rpx;
  /* border-bottom: 2rpx solid #eeeeee; */
}

.form_pic {
  width: 95rpx;
  height: 95rpx;
  border-radius: 5rpx;
}

.word_info {
  width: 600rpx;
  height: 95rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  padding-left: 16rpx;
}

.title_state_box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.title {
  font-size: 28rpx;
  max-width: 480rpx;
}

.state {
  font-size: 24rpx;
  color: #42b72a;
}

.sec {
  color: #ff5004;
}

.third {
  color: #999999;
}

.icon_box {
  width: 100%;
  display: flex;
  align-items: center;
}

.mapIcon {
  font-size: 34rpx;
  color: #42b72a;
}

.icon_name {
  font-size: 20rpx;
  color: #999999;
  padding-left: 12rpx;
}

.calendarIcon {
  font-size: 28rpx;
  color: #1a1a1a;
  padding-left: 40rpx;
}

.personIcon {
  font-size: 24rpx;
  color: #1a1a1a;
  padding-left: 40rpx;
}

/* 领取机构的信息 */
.get_org_info {
  display: flex;
  justify-content: space-between;
  /* background: #f6f6f6; */
  background: #fff;
  padding: 20rpx;
}

.get_org_price, .get_org_name, .get_org_phone {
  display: flex;
  align-items: center;
}

.get_org_price view:first-child {
  font-size: 28rpx;
  color: #42b72a;
}

.get_org_price view:nth-child(2) {
  font-size: 16rpx;
  color: #a0a0a0;
}

.get_org_userInfo {
  display: flex;
}

.get_org_name view:first-child {
  font-size: 24rpx;
  color: #999;
}

.get_org_name view:nth-child(2) {
  font-size: 24rpx;
  color: #333;
  max-width: 150rpx;
}

.get_org_phone view:first-child {
  font-size: 24rpx;
  color: #999;
  padding-left: 35rpx;
}

.get_org_phone view:nth-child(2) {
  font-size: 24rpx;
  color: #333;
}

.interact_box {
  width: 100%;
  background: #FFFFFF;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.price_box {
  padding-left: 24rpx;
}

.price_box text:first-child {
  font-size: 28rpx;
  color: #42b72a;
}

.price_box text:nth-child(2) {
  font-size: 16rpx;
  color: #a0a0a0;
}

.default_option {
  width: 375rpx;
  display: flex;
  align-items: center;
}

.hook_box {
  width: 37rpx;
  height: 37rpx;
  border-radius: 50%;
  border: 2rpx solid #b5b5b5;
  margin-left: 20rpx;
}

.choose_box {
  display: flex;
  justify-content: center;
  align-items: center;
}

.choose {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  vertical-align: top;
  margin-left: 20rpx;
}

.default_name {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.default_name_active {
  font-size: 28rpx;
  margin-left: 10rpx;
  color: #42b72a;
}

.del_check_btn {
  width: 375rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.del_btn {
  width: 122rpx;
  height: 50rpx;
  border-radius: 5rpx;
  border: 1rpx solid #d2d2d2;
  font-size: 24rpx;
  color: #666666;
  text-align: center;
  line-height: 50rpx;
  margin-right: 20rpx;
}

.check_btn {
  width: 122rpx;
  height: 50rpx;
  border-radius: 5rpx;
  border: 1rpx solid #42b72a;
  font-size: 24rpx;
  color: #42b72a;
  text-align: center;
  line-height: 50rpx;
  margin-right: 20rpx;
}

/* 删除弹窗 */
.mysteriousGift_popup {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 20;
  display: flex;
  justify-content: center;
  align-items: center;
  animation: fadeIn 1s forwards;
  -webkit-animation: fadeIn 1s forwards;
}

.mystGift_bg {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
}

.mystGift_box {
  width: 600rpx;
  height: 210rpx;
  background: #ffffff;
  position: fixed;
  border-radius: 5rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}

.delPopup_title {
  width: 100%;
  font-size: 34rpx;
  color: #333;
}

.delPopup_tips {
  width: 100%;
  font-size: 28rpx;
  color: #999;
}

.delPopup_btn {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}
.delPopup_btn text {
  font-size: 28rpx;
  color: #42b72a;
  padding-left: 60rpx;
  margin-left: 20rpx;
}