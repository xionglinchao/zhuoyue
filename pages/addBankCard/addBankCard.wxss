page {
  width: 100%;
  background: rgb(246, 246, 246);
}

.bank_info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #FFFFFF;
  padding: 24rpx 30rpx;
  border-bottom: 2rpx solid #eeeeee;
}

.bank_box {
  display: flex;
  align-items: center;
}

.bank_box>text:first-child {
  font-size: 32rpx;
}

.arrowRightIcon {
  font-size: 34rpx;
  color: #535353;
}

.tips {
  font-size: 24rpx;
  color: #666666;
  padding: 22rpx 0 22rpx 30rpx;
}

.card_info {
  display: flex;
  flex-direction: column;
  background: #FFFFFF;
}

.card_box {
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eeeeee;
  padding: 24rpx 30rpx;
}

.title_words {
  font-size: 32rpx;
  color: #000000;
}

.user_name {
  margin-left: 30rpx;
  width: 550rpx;
  font-size: 32rpx;
}

.cont_input {
  font-size: 28rpx;
  color: #959595;
}

.card_num {
  margin-left: 60rpx;
  width: 550rpx;
  font-size: 32rpx;
}

.confirm_btn {
  width: 700rpx;
  height: 90rpx;
  background: #2dab13;
  font-size: 32rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 90rpx;
  margin: 75rpx 25rpx 0 25rpx;
}

/* 底部弹出框 */
/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  height: 500rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}

.bank_card_title {
  width: 750rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-bottom: 1rpx solid #e5e5e5;
}

.card_tips_one {
  font-size: 32rpx;
  color: #000000;
  padding-left: 40rpx;
}

.card_tips_two {
  font-size: 24rpx;
  color: #999999;
  padding-left: 40rpx;
  padding-top: 12rpx;
}

.bank_list {
  width: 100%;
  height: 350rpx;
}

.each_card {
  height: 116rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 40rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.eac_bank_box {
  display: flex;
  align-items: center;
}

.bank_img {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 40rpx;
}

.each_bank_info {
  display: flex;
  flex-direction: column;
}

.each_bank_name {
  font-size: 30rpx;
  color: #666666;
}

.max_time {
  font-size: 20rpx;
  color: #999999;
}

.choose_dot_box {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #20a617;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 40rpx;
}

.sec {
  border: 2rpx solid #949494;
}

.green_dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #20a617;
}

.new_card_box {
  width: 100%;
  height: 116rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.use_new_card {
  font-size: 30rpx;
  color: #666666;
  padding-left: 130rpx;
}