page {
  background: rgba(246, 246, 246, 1);
}

.single_list {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(246, 246, 246, 1);
  background: #fff;
}

.task_pic {
  width: 95rpx;
  height: 95rpx;
  border-radius: 5rpx;
}

.task_info {
  margin-left: 20rpx;
}

.task_title {
  font-size: 28rpx;
  color: #333;
  width: 595rpx;
}

.price_address_date {
  display: flex;
  align-items: center;
  padding-top: 4rpx;
}

.price text:first-child {
  font-size: 28rpx;
  color: #42b72a;
}

.price text:nth-child(2) {
  font-size: 18rpx;
  color: #a0a0a0;
}

.address text:first-child {
  font-size: 28rpx;
  color: #434343;
  margin-left: 30rpx;
}

.address text:nth-child(2) {
  font-size: 20rpx;
  color: #999;
  margin-left: 6rpx;
}

.date text:first-child {
  font-size: 28rpx;
  color: #1a1a1a;
  margin-left: 20rpx;
}

.date text:nth-child(2) {
  font-size: 20rpx;
  color: #999;
  margin-left: 6rpx;
}

/* 删除弹窗 */
.mysteriousGift_popup {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 20;
  display: flex;
  justify-content: center;
  align-items: center;
  animation: fadeIn 1s forwards;
  -webkit-animation: fadeIn 1s forwards;
}

.mystGift_bg {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
}

.mystGift_box {
  width: 600rpx;
  height: 210rpx;
  background: #ffffff;
  position: fixed;
  border-radius: 5rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}

.delPopup_title {
  width: 100%;
  font-size: 34rpx;
  color: #333;
}

.delPopup_tips {
  width: 100%;
  font-size: 28rpx;
  color: #999;
}

.delPopup_btn {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}
.delPopup_btn text {
  font-size: 28rpx;
  color: #42b72a;
  padding-left: 60rpx;
  margin-left: 20rpx;
}