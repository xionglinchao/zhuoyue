page {
  width: 100%;
  background: rgb(246, 246, 246);
}

.base_info {
  position: relative;
  width: 100%;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 18rpx 0;
  border-bottom: 1rpx solid #eeeeee;
}

.sec {
  padding: 30rpx 0;
}

.title {
  font-size: 28rpx;
  color: #000000;
  padding: 0 20rpx;
}

.title_cont {
  display: flex;
  align-items: center;
}

.user_photo {
  width: 105rpx;
  height: 105rpx;
  border-radius: 50%;
}

.arrowRightIcon {
  font-size: 36rpx;
  color: #828282;
  padding: 0 16rpx;
}

.title_words {
  max-width: 500rpx;
  font-size: 24rpx;
  color: #666666;
  display: flex;
  justify-content: flex-end;
}

/* 性别选择弹窗 */
.mysteriousGift_popup {
  width: 100%;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 20;
  display: flex;
  justify-content: center;
  align-items: center;
  animation: fadeIn 1s forwards;
  -webkit-animation: fadeIn 1s forwards;
}

.mystGift_bg {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
}

.mystGift_box {
  width: 600rpx;
  height: 350rpx;
  background: #ffffff;
  position: fixed;
  border-radius: 5rpx;
  display: flex;
  flex-direction: column;
}

.gender {
  font-size: 36rpx;
  color: #000000;
  margin: 34rpx;
}

.male, .female {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 36rpx;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #eeeeee;
}

.female {
  border: none;
}

.man, .woman {
  font-size: 28rpx;
  color: #000000;
  padding-left: 30rpx;
}

.choose_dot_box {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  border: 1rpx solid #42b72a;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.grey {
  border: 1rpx solid #949494;
}

.green_dot {
  width: 20rpx;
  height: 20rpx;
  background: #42b72a;
  border-radius: 50%;
}

/* 修改昵称弹窗 */
.namePopup_box {
  width: 600rpx;
  height: 350rpx;
  background: #ffffff;
  position: fixed;
  border-radius: 5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.nameInput {
  width: 400rpx;
  border-bottom: 1rpx solid #ddd;
}

.confirm_cancel_box {
  width: 500rpx;
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
}

.confirm_cancel_box>text {
  width: 120rpx;
  height: 60rpx;
  border: 1rpx solid #ddd;
  border-radius: 12rpx;
  color: #999;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.form_btn{
  position:absolute;
  height:100%;
  width:100%;
  opacity:0;
  z-index:1;
  top:0;
  left:0;
}